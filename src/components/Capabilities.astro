<section class="py-24 px-4 sm:px-6 lg:px-8 relative">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl sm:text-5xl font-bold text-white mb-4">
        Engineering Excellence
      </h2>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto text-balance">
        Every project ships with enterprise-grade performance, security, and scalability built in.
      </p>
    </div>

    <!-- Bento Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 auto-rows-[minmax(200px, auto)]">
      <!-- Card 1: Perfect Lighthouse Scores (Large - Spans 2 cols) -->
      <div class="md:col-span-2 bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl p-8 flex flex-col items-center justify-center hover:border-[#c9d40c]/50 transition-colors duration-300 group">
        <div class="relative mb-6">
          <!-- Large Circle with Score -->
          <div class="w-32 h-32 rounded-full bg-green-500/20 border-4 border-green-500 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <span class="text-5xl font-bold text-green-500">100</span>
          </div>
          <!-- Subtle glow effect -->
          <div class="absolute inset-0 rounded-full bg-green-500/10 blur-xl group-hover:bg-green-500/20 transition-all duration-300"></div>
        </div>
        <h3 class="text-2xl font-bold text-white mb-2">Perfect Lighthouse Scores</h3>
        <p class="text-gray-400 text-center max-w-md">
          Core Web Vitals optimized. We don't ship until it's green.
        </p>
      </div>

      <!-- Card 2: Global Edge Network (Tall - Spans 1 col, 2 rows) -->
      <div class="md:row-span-2 bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl p-8 flex flex-col items-center justify-center hover:border-[#c9d40c]/50 transition-colors duration-300 group">
        <div class="mb-6 relative">
          <!-- Globe/Network Icon -->
          <svg class="w-20 h-20 text-[#c9d40c] group-hover:scale-110 transition-transform duration-300 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <!-- Network nodes overlay -->
          <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
            <div class="w-24 h-24 border border-[#c9d40c]/20 rounded-full"></div>
          </div>
        </div>
        <h3 class="text-2xl font-bold text-white mb-2 text-center">Global Edge Network</h3>
        <p class="text-gray-400 text-center">
          Deployed to 35+ regions instantly. Your site lives close to your users.
        </p>
      </div>

      <!-- Card 3: Security First (Small) -->
      <div class="bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl p-8 flex flex-col items-center justify-center hover:border-[#c9d40c]/50 transition-colors duration-300 group">
        <div class="mb-4 relative">
          <!-- Shield Icon with Glow -->
          <svg class="w-16 h-16 text-[#c9d40c] group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          <!-- Subtle glow effect -->
          <div class="absolute inset-0 bg-[#c9d40c]/10 blur-lg group-hover:bg-[#c9d40c]/20 transition-all duration-300"></div>
        </div>
        <h3 class="text-xl font-bold text-white mb-2 text-center">Security First</h3>
        <p class="text-gray-400 text-center text-sm">
          Enterprise-grade protection standard.
        </p>
      </div>

      <!-- Card 4: Mobile Native (Medium) -->
      <div class="md:col-span-1 bg-white/5 backdrop-blur-md border border-white/10 rounded-2xl p-8 flex flex-col md:flex-row items-center justify-center gap-6 hover:border-[#c9d40c]/50 transition-colors duration-300 group">
        <div class="flex-shrink-0">
          <!-- Smartphone Icon -->
          <svg class="w-20 h-20 text-[#c9d40c] group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
        </div>
        <div class="flex-1 text-center md:text-left">
          <h3 class="text-2xl font-bold text-white mb-2">Mobile Native</h3>
          <p class="text-gray-400">
            Responsive layouts that feel like native apps.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
